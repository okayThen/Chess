public class Location
{
    private int row;
    private int col;
    private boolean occupied;
    private Piece piece;
    
    public Location(int row, int col)
    {
        this.row = row;
        this.col = col;
    }
    
    public int getRow()
    {
        return row;
    }
    
    public void setRow(int r)
    {
        row = r;
    }
    
    public void getCol()
    {
        return col;
    }
    
    public void setCol(int c)
    {
        col = c;
    }

    public boolean isOccupied()
    {
        if(occupied)
            return true;
        
        return false;
    }
    
    public String toString()
    {
        if(occupied == false)
            return " - ";
        
        return piece.toString();
    }
}
